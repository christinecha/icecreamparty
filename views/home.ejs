<body>
    <div id="header">
      <% include partials/_header.ejs %>
    </div>

    <div id="promotion-bar">
    </div>

    <div id="home" class="row">

      <form id="createIceCream">
        <div id="display" class="screen light-gray">
          <div id="display--image">
            <% include icecream/top.ejs %>
            <% include icecream/cone.ejs %>
          </div>
          <div id="display--name">
            <span class="xsmall">name your masterpiece</span>
            <input type="text" />
          </div>
        </div>

        <div id="editor" class="screen">
          <% include partials/_editor.ejs %>
        </div>
      </form>

      <div id="cart" class="screen light-gray hidden">
      </div>
      <div id="checkout" class="screen light-gray hidden">
      </div>
    </div>

    <div id="footer">
      <% include partials/_footer.ejs %>
    </div>

  <script type="text/javascript" src="js/global.js"></script>
  <script type="text/javascript" src="js/home.js"></script>
