<form action="/newCharge" method="POST" id="payment-form" class="text-left">
  <div class="text-center" style="width: 100%;">
    <button class="medium white selected">billing</button>
    <button class="medium white">shipping</button>
  </div>

  <div id="billing">
    <span class="payment-errors"></span><br>

    <span class="xsmall label">FULL NAME</span>
    <input type="text" size="20" data-stripe="name"/><br>

    <span class="xsmall label">CARD NO.</span>
    <input type="text" size="20" data-stripe="number"/><br>

    <div class="form-group inline">
      <span class="xsmall label">CVC</span>
      <input type="text" size="4" data-stripe="cvc" style="width: 80px;"/>
    </div>
    <div class="form-group inline float-right">
      <span class="xsmall label">Expiration (MM/YY)</span>
      <input type="text" size="2" data-stripe="exp-month" style="width: 70px;"/>
      <span style="line-height: 28px; font-size: 22px;"> / </span>
      <input type="text" size="4" data-stripe="exp-year" style="width: 70px;"/>
    </div>
  </div>

  <div id="shipping" style="display:none;">
  <h3 class="text-left">Shipping Information</h3>
  <br>
  <span>ADDRESS</span><br>
  <input type="text" size="20" data-stripe="address1"/><br>
  <input type="text" size="20" data-stripe="address2"/>
  <br><br>
  </div>

  <button class="large full playfair">submit payment</button>
</form>
